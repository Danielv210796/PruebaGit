@model IEnumerable<PruebaGit.Web.Models.Paciente>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Agrega un nuevo paciente", "Create","Paciente", new { @class = "navbar-brand text-dark" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.Nombre_Doctor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.No_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AM_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AP_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Nacimiento_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enfermedad_Paciente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.Nombre_Doctor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.No_Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AM_Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AP_Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Nacimiento_Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero_Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enfermedad_Paciente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
