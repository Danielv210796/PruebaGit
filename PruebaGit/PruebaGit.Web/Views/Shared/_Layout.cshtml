<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-dark">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("Cinemex", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar navbar-dark">
                <nav class="navbar-header">
                    <a>@Html.ActionLink("Inicio", "Index", "Home", new { @class = "navbar-brand" })</a>
                    <a>@Html.ActionLink("Contacto", "Contact", "Home", new { @class = "navbar-brand" })</a>
                    <a>@Html.ActionLink("Acerca ", "About", "Home", new { @class = "navbar-brand" })</a>
                    @Html.Partial("_LoginPartial", new { @class = "navbar - brand" })
                </nav>
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-white text-center">
            <p>&copy; @DateTime.Now.Year - Apliacacion (Nombre a modificar)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

