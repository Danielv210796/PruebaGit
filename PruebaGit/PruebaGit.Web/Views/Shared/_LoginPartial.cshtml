@using Microsoft.AspNet.Identity
<div class="container">
    <div class="navbar navbar-dark mr-5">
        <div class="navbar navbar-dark">
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar" }))
                {

                    @Html.AntiForgeryToken()

                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-primary text-light" })
                        </li>
                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-outline-primary text-light mt-3">Cerrar sesión</a>
                        </li>
                    </ul>
                }
            }

            else
            {

                <a>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-outline-primary text-dark mr-3" })</a>
                <a>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-outline-primary text-dark" })</a>

            }
        </div>
    </div>
    </div>