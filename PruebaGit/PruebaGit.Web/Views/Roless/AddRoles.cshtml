
@model PruebaGit.Web.Models.ApplicationUser
@{
    ViewBag.Title = "AddRoles";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card py-0">
                <div class="card-header bg-info">
                    <h5 class="m-1 text-dark">Agregar rol</h5>
                </div>
                <div class="card-body">
                    <form class="" action="@Url.Action("AddRoles,Roless")" method="post">
                        <div class="form-group">
                            <label class="col-md-10"> Usuario</label>
                            <div class="col-md-10">
                                <input type="hidden" name="UserId" value="@Model.Id" />
                                <input type="text" name="UserName" value="@Model.UserName" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-10">Escoja el rol</label>
                            <div class="col-md-10">
                                <select class="form-control" name="RolName">
                                    <option value="">Elige el rol</option>
                                    <option value="Administrator">Administrator</option>
                                    <option value="Doctores">Doctores</option>
                                    <option value="Actividades">Actividades</option>
                                    <option value="Hospitales">Hospitales</option>
                                    <option value="Pacientes">Pacientes</option>
                                </select>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <input type="submit" value="Enviar" class="btn btn-success" />
                            <a href="@Url.Action("Inde","Roless")" class="btn btn-warning ml-3">Regresar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
