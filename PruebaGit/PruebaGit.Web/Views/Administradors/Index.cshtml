@model IEnumerable<PruebaGit.Web.Models.Administrador>

@{
    ViewBag.Title = "Index";
}


    <a href="@Url.Action("Create", "Administradors")" class="navbar-brand btn btn-outline-primary text-dark text-center"><h6 class="m-2">Registrar Empleado</h6></a>
      
     <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-8">
                <div class="card bg-white btn btn-outline-dark">
                    <div class="card-body bg-transparent">
                        <div class="text-dark text-center"><h3>Lista de empleados</h3></div>
                        <table class="table table-striped table-responsive-sm mt-4">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Trabajador.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id_Usuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.APM)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.APP)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Trabajador.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id_Usuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.APM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.APP)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
