@model IEnumerable<PruebaGit.Web.Models.Doctor>

@{
    ViewBag.Title = "Index";
}
    <div class="container">
        <div class="row justify-content-center">
            <p>
                @Html.ActionLink("Agrega un nuevo doctor", "Create", "Doctors", new { @class = "btn btn-outline-info navbar-brand text-dark" })
            </p>
            <div class="col-md-12 bg-info">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre_Doctor)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre_Doctor)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

